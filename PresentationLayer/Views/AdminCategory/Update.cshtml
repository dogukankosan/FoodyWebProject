@model Category
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-body">
    <div class="col-md-8">
        <div class="row">
            <div class="card-header">
                <div class="card-title">Kategori Güncelle</div>
                <hr />
            </div>
            <div class="form-group">
                <form action="~/Kategori/Guncelle" method="post">
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                    <label for="email2">Kategori Adı</label>
                    <input type="text"
                        value="@Model.CategoryName"
                           name="CategoryName"
                           class="form-control"
                           id=""
                           placeholder="Kategori Adı Giriniz.." />
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               value="@Model.CategoryStatus"
                               name="CategoryStatus"
                               id="CategoryStatus" />
                        <label class="form-check-label"
                               for="flexCheckDefault">
                            Kategori Durum Aktif
                        </label>
                    </div>
                    <button type="submit" class="btn btn-info">Kategori Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>